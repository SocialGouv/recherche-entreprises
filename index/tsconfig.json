{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
   
    "compilerOptions": {
      "lib": ["es2020", "dom"],
      "module": "commonjs",
      "target": "es2020",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },

    "rules": {
        "no-console": false
    },

    "include": [
      "./src/**/*"
    ]
  }